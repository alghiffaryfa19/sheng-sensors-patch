# Maintainer: Jami Kettunen <jami.kettunen@protonmail.com>

pkgname=fastrpc
pkgver=1.0.2
pkgrel=1
pkgdesc="FastRPC daemon for Xiaomi Mi Pad 6s Pro"
arch="aarch64"
license="BSD-3-Clause"
url="https://github.com/qualcomm/fastrpc"

depends=""
makedepends=""

source="
	adsprpcd
	adsprpcd-sensorspd.service
"

build() {
	return 0
}

package() {
	install -Dm755 "$srcdir/adsprpcd" \
		"$pkgdir/usr/bin/adsprpcd"

	install -Dm644 "$srcdir/adsprpcd-sensorspd.service" \
		"$pkgdir/usr/lib/systemd/system/adsprpcd-sensorspd.service"
}
